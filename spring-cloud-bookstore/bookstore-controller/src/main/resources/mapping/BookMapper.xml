<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.spring.cloud.bookstore.mapper.BookMapper">

    <resultMap id="BaseResultMap" type="com.spring.cloud.bookstore.domain.Book">
        <result column="id" jdbcType="BIGINT" property="id"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="authorId" jdbcType="VARCHAR" property="authorId"/>
        <result column="bookType" jdbcType="VARCHAR" property="bookType"/>
        <result column="price" jdbcType="DOUBLE" property="price"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, name, authorId, bookType, price
    </sql>

    <select id="findOne" resultType="com.spring.cloud.bookstore.domain.Book">
        select
        <include refid="Base_Column_List"/>
        from book
        where id = #{id}
    </select>

    <select id="findPage" resultMap="BaseResultMap" parameterType="com.spring.cloud.core.bookstore.BookDTO">
        select
        <include refid="Base_Column_List"/>
        from book
        where 1=1
        <if test="name != null ">
            and name = #{name}
        </if>
        <if test="authorId != null ">
            and authorId = #{authorId}
        </if>
    </select>
</mapper>